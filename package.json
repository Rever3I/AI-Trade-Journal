{
  "name": "ai-trade-journal",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "extension",
    "worker"
  ],
  "scripts": {
    "dev:ext": "npm run dev --workspace=extension",
    "dev:worker": "npm run dev --workspace=worker",
    "build:ext": "npm run build --workspace=extension",
    "build:worker": "npm run build --workspace=worker",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
